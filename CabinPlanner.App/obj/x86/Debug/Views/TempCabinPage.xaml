<Page x:ConnectionId='1'
    x:Class="CabinPlanner.App.Views.TempCabinPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:CabinPlanner.Model"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
                        >
    <Grid x:ConnectionId='2'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <TextBlock x:ConnectionId='3' x:Name="cabinsNtripsTxt" HorizontalAlignment="Left" Margin="91,30,0,0" Text="Cabins and Trips" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="40"/>
            <ListView x:ConnectionId='4' Name="Cabins" Margin="0,166,1073,500"                                           >
                <ListView.ItemTemplate>
                    <DataTemplate                         >
                        <TextBlock x:ConnectionId='17' x:Name="LocationTextBlock">
                                <Run x:ConnectionId='18'                          ></Run>
                                <Run FontWeight="Bold">Owner: </Run>
                                <LineBreak />
                                <Run x:ConnectionId='19'                                      ></Run>
                        </TextBlock>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView x:ConnectionId='5' Name="CommingTrips" Margin="0,586,1073,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate                               >
                        <TextBlock x:ConnectionId='14' x:Name="LocationTextBlock">
                                <Run FontWeight="Bold">From: </Run>
                                <Run x:ConnectionId='15'                                             ></Run>
                                <LineBreak />
                                <Run FontWeight="Bold">To: </Run>
                                <Run x:ConnectionId='16'                                           ></Run>
                        </TextBlock>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock x:ConnectionId='6' x:Name="cabinTxt" HorizontalAlignment="Left" Margin="10,142,0,0" Text="Cabins" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <Button x:ConnectionId='7' x:Name="addCabinBtn" Content="Add Cabin" HorizontalAlignment="Left" Margin="128,134,0,0" VerticalAlignment="Top"                          />
            <TextBlock x:ConnectionId='8' x:Name="tripTxt" HorizontalAlignment="Left" Margin="10,567,0,0" Text="Comming Trips" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <CalendarView x:ConnectionId='9' x:Name="tripCalendar" HorizontalAlignment="Left" Margin="726,93,0,0" VerticalAlignment="Top" Height="310" Width="296" SelectionMode="Multiple"                                                          />
            <TextBlock x:ConnectionId='10' x:Name="textBlock1" HorizontalAlignment="Left" Margin="726,452,0,0" Text="Plan trip" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
            <TextBlock x:ConnectionId='11' x:Name="toFromTxt" HorizontalAlignment="Left" Margin="816,476,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBox x:ConnectionId='12' x:Name="descriptionField" HorizontalAlignment="Left" Margin="726,500,0,0" Text="Description" VerticalAlignment="Top" Width="296"/>
            <Button x:ConnectionId='13' x:Name="addTripBtn" Content="Add trip" HorizontalAlignment="Left" Margin="960,539,0,0" VerticalAlignment="Top"                         />

            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
        </Grid>
    </Grid>
</Page>

