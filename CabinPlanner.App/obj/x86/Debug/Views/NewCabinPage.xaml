<Page x:ConnectionId='1'
    x:Class="CabinPlanner.App.Views.NewCabinPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:CabinPlanner.Model"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
                        >
    <Grid x:ConnectionId='2'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <TextBox x:ConnectionId='3' x:Name="cabinNameField" HorizontalAlignment="Left" Margin="71,0,0,0" VerticalAlignment="Center" Width="363"
                      Text="" PlaceholderText="Cabin name" Header="Cabin name" Height="66"/>
            <TextBlock x:ConnectionId='4' x:Name="CabinOwnerField" HorizontalAlignment="Left" Margin="71,398,0,0" Text="Cabin Owner" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="364" FontSize="20"/>
            <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Left" Margin="71,374,0,0" Text="Cabin Owner" TextWrapping="Wrap" VerticalAlignment="Top" Height="24" Width="114"/>
            <Button x:ConnectionId='6' x:Name="addCabinBtn" Content="Add Cabin" HorizontalAlignment="Left" Margin="349,555,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.061,0.719"                          />
            <ListView x:ConnectionId='7' Name="PeopleWithoutAccess" Margin="466,199,673,467"  Header="People"                                            >
                <ListView.ItemTemplate>
                    <DataTemplate                          >
                        <TextBlock x:ConnectionId='13' x:Name="LocationTextBlock">
                                <Run x:ConnectionId='14'                           ></Run>
                        </TextBlock>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView x:ConnectionId='8' Name="PeopleWithAccess" Margin="825,199,306,467" Header="People with access" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"                                     >
                <ListView.ItemTemplate>
                    <DataTemplate                          >
                        <TextBlock x:ConnectionId='11' x:Name="LocationTextBlock">
                                <Run x:ConnectionId='12'                           ></Run>
                        </TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button x:ConnectionId='9' x:Name="moveToAccessBtn" Content="->" HorizontalAlignment="Left" Margin="784,228,0,0" VerticalAlignment="Top"                              />
            <Button x:ConnectionId='10' x:Name="moveFromAccessBtn" Content="&lt;-" HorizontalAlignment="Left" Margin="784,265,0,0" VerticalAlignment="Top"/>

            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
        </Grid>
    </Grid>
</Page>

