<Page x:ConnectionId='1'
    x:Class="CabinPlanner.App.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:CabinPlanner.Model"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d"
                        >

    <Grid x:ConnectionId='2'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <!--The SystemControlPageBackgroundChromeLowBrush background represents where you should place your content. 
                Place your content here.-->
            <StackPanel>
                <RelativePanel HorizontalAlignment="Stretch" Height="19" Margin="0,0,0,0" VerticalAlignment="Stretch">
                    <TextBlock x:ConnectionId='3' x:Name="NameTxt" Text="TextBlock" TextWrapping="Wrap" Margin="16,37,-697,-104" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="40"/>

                </RelativePanel>

            </StackPanel>
        </Grid>
    </Grid>
</Page>

